{
    "compileOnSave": false,
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitThis": false,
        "importHelpers": true,
        "target": "ES2020",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@core-template": ["../core-template/src/index.ts"],
            "@ngn-template/access": ["libs/access/src/index.ts"],
            "@ngn-template/cdk": ["libs/cdk/src/index.ts"],
            "@ngn-template/cdk/mock": ["libs/cdk/src/lib/spec/index.ts"],
            "@ngn-template/ui-kit": ["libs/ui-kit/src/index.ts"],
        }
    },
    "exclude": ["node_modules", "tmp"],
    "include": ["../core-template/packages/**/*.ts"] // only develop
}
