{
    "compileOnSave": false,
    "compilerOptions": {
        "strict": true,
        "strictBindCallApply": true,
        "noImplicitAny": true,
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "ES2020",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@ngn-template/api-interfaces": ["libs/api-interfaces/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
